<div id="navbar">
    <nav class="navbar navbar-dark navbar-expand-sm fixed-top">
        <div class="container">
            
            <!-- Collapsable Navbar for smaller screens-->
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#Navbar">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="Navbar">
                <ul class="navbar-nav">
                    <li id="home" class="nav-item active"><a class="nav-link" href="/"><span class="fa fa-home fa-lg"></span> Home</a></li>
                    <li id="questions" class="nav-item"><a class="nav-link"><span class="fa fa-question fa-lg"></span> Questions</a></li>
                </ul>
                <span class="navbar-text ml-auto">
                    <% if (username) { %>
                        <div class="dropdown">
                            <a id="user" role="button" id="user-options" data-toggle="dropdown">
                                <span class="fa fa-user col-sm-2"></span> <%= username %>
                            </a>

                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="/questions">Ask a Question</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="">View Profile</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="">Answers</a>
                            </div>
                        </div>
                        <a id="logout">
                            <span class="fa fa-sign-out col-sm-2"></span> Logout
                        </a>
                    <% } else { %>
                        <a id="signupbtn">
                            <span class="fa fa-user col-sm-1"></span> Sign Up
                        </a>
                        <a id="verifybtn">
                            <span class="fa fa-check col-sm-1"></span> Verify
                        </a>
                        <a id="loginbtn">
                            <span class="fa fa-sign-in col-sm-1"></span> Login
                        </a>
                    <% } %>
                </span>
            </div>   
        </div>
    </nav>

    <div id="signupModal" class="modal fade" role="dialog">
        <div class="modal-dialog modal-m" role="content">

            <div class="modal-content">
                <div class="modal-header">
                    <h5 class='col-11 modal-title text-center'>Sign Up</h5>
                    <button type="button" class="close" data-dismiss="modal">
                        &times;
                    </button>
                </div>
                <div class="modal-body text-center">
                    <form id="adduser" action="/adduser" method="post">                                   
                        <div>
                            <label for="email">Email</label>
                            <div>
                                <input type="text" id="email" name="email">
                            </div> 
                        </div>            
                        
                        <div>
                            <label for="username">Username</label>
                            <div>
                                <input type="text" id="username" name="username">
                            </div> 
                        </div>
            
                        <div>
                            <label for="password">Password</label>
                            <div>
                                <input type="password" id="password" name="password">
                            </div> 
                        </div>                   

                        <div class="form-row">                               
                            <button type="submit" class="btn btn-primary btn-sm ml-auto">Sign Up</button>        
                        </div>
                    </form> 
                </div>
            </div>
        </div>
    </div>

    <div id="loginModal" class="modal fade" role="dialog">
        <div class="modal-dialog modal-m" role="content">

            <div class="modal-content">
                <div class="modal-header">
                    <h5 class='col-11 modal-title text-center'>Login</h5>
                    <button type="button" class="close" data-dismiss="modal">
                        &times;
                    </button>
                </div>
                <div class="modal-body text-center">
                    <form id="login" action="/login" method="post">                                  
                        <div>
                            <label for="username">Username</label>
                            <div>
                                <input type="text" id="username" name="username">
                            </div> 
                        </div>
            
                        <div>
                            <label for="password">Password</label>
                            <div>
                                <input type="password" id="password" name="password">
                            </div> 
                        </div>

                        <div class="form-row">                               
                            <button type="submit" class="btn btn-primary btn-sm ml-auto">Login</button>        
                        </div>
                    </form>   
                </div>
            </div>
        </div>
    </div>

    <div id="verifyModal" class="modal fade" role="dialog">
        <div class="modal-dialog modal-m" role="content">

            <div class="modal-content">
                <div class="modal-header">
                    <h5 class='col-11 modal-title text-center'>Verify</h5>
                    <button type="button" class="close" data-dismiss="modal">
                        &times;
                    </button>
                </div>
                <div class="modal-body text-center">
                    <form id="verify" action="/verify" method="post">                                  
                        <div>
                            <label for="email">Email</label>
                            <div>
                                <input type="text" id="email" name="email">
                            </div> 
                        </div>            
                        
                        <div>
                            <label for="key">Key</label>
                            <div>
                                <input type="text" id="key" name="key">
                            </div> 
                        </div>

                        <div class="form-row">                               
                            <button type="submit" class="btn btn-primary btn-sm ml-auto">Verify</button>        
                        </div>
                    </form>   
                </div>
            </div>
        </div>
    </div>
</div>